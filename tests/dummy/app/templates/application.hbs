{{#sy-sidenav as |component section|}}
  {{#if (eq section 'body')}}
    {{#sy-sidenav-list}}
      {{sy-sidenav-item 'index' 'home' 'Home'}}
    {{/sy-sidenav-list}}
    {{#sy-sidenav-list header='Settings'}}
      {{#sy-sidenav-item 'index' 'user'}}
        User
      {{/sy-sidenav-item}}
      {{sy-sidenav-item 'index' 'users' 'Users'}}
    {{/sy-sidenav-list}}
  {{else if (eq section 'page-content')}}
    <main class="page-main">
      <div class="page-content">
        {{outlet}}
      </div>
    </main>
  {{/if}}
{{/sy-sidenav}}
