<nav class="nav-side {{if slide 'slide-in'}} {{if expand 'nav-side--expand'}} {{if autohide 'nav-side--autohide'}}">
  <header class="nav-side-header">
    <button class="nav-toggle nav-side-toggle" type="button" {{action 'toggle'}}></button>
    {{#link-to headerLink}}
      <div class="nav-side-header-logo"></div>
      <div class="nav-side-header-title">{{title}}</div>
    {{/link-to}}
  </header>
  <section class="nav-side-body">
    {{yield this 'body'}}
  </section>
  {{#if showAutohideButton}}
    <footer class="nav-side-footer">
      <button class="nav-hide btn" type="button" title="Toggle navigation" {{action 'autohide' on='click'}}>
        <i class="fa fa-chevron-{{if autohide 'right' 'left'}}"></i>
      </button>
    </footer>
  {{/if}}
</nav>
{{yield this 'page-content'}}
<div class="page-main-overlay" {{action 'close' on='click'}}></div>
