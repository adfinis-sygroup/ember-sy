{{#if link}}
  {{#link-to link title=text}}
    {{#if icon}}<i class="fa fa-{{icon}}"></i>{{/if}}
    {{#if hasBlock}}
      {{yield}}
    {{else}}
      {{text}}
    {{/if}}
  {{/link-to}}
{{else}}
  {{#if icon}}<i class="fa fa-{{icon}}"></i>{{/if}}
  {{#if hasBlock}}
    {{yield}}
  {{else}}
    {{text}}
  {{/if}}
{{/if}}
